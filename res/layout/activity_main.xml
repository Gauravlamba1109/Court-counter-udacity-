<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/team_a"
                android:textColor="#616161"
                android:textSize="14dp"
                android:layout_margin="16dp"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="56dp"
                android:layout_margin="24dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center|center_vertical"
                android:onClick="updateScoreBy3a"
                android:text="@string/_3_point"
                android:textColor="#616161"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center|center_vertical"
                android:onClick="updateScoreBy2a"
                android:text="@string/_2_point"
                android:textColor="#616161"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center|center_vertical"
                android:onClick="updateScoreBy1a"
                android:text="@string/free_throw"
                android:textColor="#616161"/>

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        "

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="4dp"
                android:text="Team B"
                android:textColor="#616161"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="56dp"
                android:layout_margin="24dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center|center_vertical"
                android:onClick="updateScoreBy3b"
                android:text="@string/_3_point"
                android:textColor="#616161"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center|center_vertical"
                android:onClick="updateScoreBy2b"
                android:text="@string/_2_point"
                android:textColor="#616161"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center|center_vertical"
                android:onClick="updateScoreBy1b"
                android:text="@string/free_throw"
                android:textColor="#616161"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:onClick="reset"
            android:text="Reset"
            android:textColor="#616161"/>
    </LinearLayout>

</LinearLayout>
